# CONFAB Purpose Discovery LMS - Environment Variables
# Copy this file to .env and update the values as needed

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=9092
API_BASE_URL=http://localhost:9092

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=https://lms.theconfab.org, http://localhost:3000

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# Must be at least 16 characters long
JWT_SECRET=confaBLm$%&25
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=30d

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/confab_lms

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Choose between 'resend' or 'nodemailer'
EMAIL_PROVIDER=nodemailer

# =============================================================================
# RESEND EMAIL SERVICE (if using Resend)
# =============================================================================
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=CONFAB <noreply@theconfab.org>

# =============================================================================
# NODEMAILER CONFIGURATION (if using Nodemailer)
# =============================================================================
# Choose provider: 'gmail', 'outlook', 'yahoo', 'smtp'
NODEMAILER_PROVIDER=gmail
NODEMAILER_USER=thetechconfab@gmail.com
NODEMAILER_PASSWORD=cjgx llhe tekr pynz
NODEMAILER_FROM=thetechconfab@gmail.com
NODEMAILER_HOST=smtp.gmail.com
NODEMAILER_PORT=587
NODEMAILER_SECURE=false
NODEMAILER_REJECT_UNAUTHORIZED=false

# =============================================================================
# CLOUDINARY CONFIGURATION
# =============================================================================
CLOUDINARY_CLOUD_NAME=confab_lms_dev
CLOUDINARY_API_KEY=test_api_key
CLOUDINARY_API_SECRET=test_api_secret

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
INITIAL_ADMIN_EMAIL=admin@theconfab.org
PRODUCT_NAME=CONFAB Purpose Discovery LMS
CLIENT_URL=http://localhost:3000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_FLAGS_MESSAGING=true
FEATURE_FLAGS_REPORTS=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Choose level: 'error', 'warn', 'info', 'debug'
LOG_LEVEL=info

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate limit window in milliseconds (15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size in MB
MAX_FILE_SIZE_MB=10

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Session secret for security middleware
SESSION_SECRET=confab-session-secret-change-in-production

# =============================================================================
# NOTES
# =============================================================================
# 1. For production, change all default secrets and keys
# 2. Use strong, unique JWT_SECRET (at least 16 characters)
# 3. Update CORS_ALLOWED_ORIGINS for your production domains
# 4. Set NODE_ENV=production in production
# 5. Use environment-specific MongoDB URIs
# 6. Configure proper email credentials for production
# 7. Set up Cloudinary with your production credentials
